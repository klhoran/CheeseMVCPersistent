@model CheeseMVC.ViewModels.AddCheeseCategoryViewModel

<h1>Add Cheese Category</h1>

<form asp-controller="CheeseCategory" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    

    <input type="submit" value="Add Cheese Category" />

</form>
